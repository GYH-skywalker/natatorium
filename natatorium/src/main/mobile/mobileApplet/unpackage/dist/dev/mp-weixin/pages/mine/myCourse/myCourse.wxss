.course {
  display: flex;
  width: 100vw;
  flex-wrap: wrap;
}
.course .courseCard uni-card {
  width: 50vw;
  display: flex;
}
.course .courseCard uni-card .uni-card--border {
  border: none !important;
}
.course .courseCard uni-card .uni-card {
  margin: 10px !important;
  padding: 0px !important;
  box-shadow: 0px 0px 6px 3px rgba(209, 209, 209, 0.7) !important;
}
.course .courseCard uni-card .uni-card .abstract {
  display: flex;
  flex-wrap: wrap;
  padding: 0px 5px 8px;
}
.course .courseCard uni-card .uni-card .abstract .u-tag {
  height: 20px !important;
  padding: 0 4px !important;
}
.course .courseCard uni-card .uni-card .abstract .text {
  font-size: 12px;
  line-height: 14px;
  height: 28px;
  margin-top: 5px;
  padding-left: 5px;
  text-overflow: ellipsis;
  overflow: hidden;
}
.course .courseCard:nth-of-type(odd) uni-card .uni-card {
  margin-right: 6px !important;
}
.course .courseCard:nth-of-type(even) uni-card .uni-card {
  margin-left: 6px !important;
}

